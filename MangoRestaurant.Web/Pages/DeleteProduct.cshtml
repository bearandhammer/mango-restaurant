@page
@model MangoRestaurant.Web.Pages.DeleteProductModel
@{
}

<form method="post">
    <input type="hidden" asp-for="@Model.Product.Id"/>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="@Model.Product.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Product.Name" class="form-control" disabled/>
            </div>
            <div class="col-2">
                <label asp-for="@Model.Product.CategoryName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Product.CategoryName" class="form-control" disabled/>
            </div>
            <div class="col-2">
                <label asp-for="@Model.Product.Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.Product.Description" class="form-control" rows="5" disabled></textarea>
            </div>
            <div class="col-2">
                <label asp-for="@Model.Product.ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Product.ImageUrl" class="form-control" disabled/>
            </div>
            <div class="col-2">
                <label asp-for="@Model.Product.Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Product.Price" class="form-control" disabled/>
            </div>
            <div class="col-5 offset-2">
                <a asp-page="/Products" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@page
@model MangoRestaurant.Services.Identity.Pages.Account.Registration.RegisterModel
@{
}
<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
        <p>Choose how to register</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account Register</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="@Model.RegisterViewModel.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="@Model.RegisterViewModel.Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.Email"></label>
                            <input class="form-control" placeholder="email" asp-for="@Model.RegisterViewModel.Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.FirstName"></label>
                            <input class="form-control" placeholder="first name" asp-for="@Model.RegisterViewModel.FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.LastName"></label>
                            <input class="form-control" placeholder="lastname" asp-for="@Model.RegisterViewModel.LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="@Model.RegisterViewModel.Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RegisterViewModel.RoleName"></label>
                            <select asp-for="@Model.RegisterViewModel.RoleName" class="form-control" asp-items="@(new SelectList(@Model.RegisterViewModel.Roles))"></select>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Login</a>
                </div>
            </div>
        </div>


    </div>
</div>
